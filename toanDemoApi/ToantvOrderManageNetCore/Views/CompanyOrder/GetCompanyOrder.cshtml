@model IEnumerable<ToantvOrderManageNetCore.Data.Models.CompanyOrder.CompanyOrderDto>

@{
    ViewData["Title"] = "GetCompanyOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetCompanyOrder</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
